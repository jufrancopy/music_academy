    <script>
        // Script para reemplazar los iconos con notas musicales cuando no est치n disponibles
        document.addEventListener('DOMContentLoaded', function() {
            // Comprobar si los iconos existen
            const violinIcon = document.querySelector('.fa-violin');
            const celloIcon = document.querySelector('.fa-cello');
            const pianoIcon = document.querySelector('.fa-piano');
            
            // Reemplazar iconos si no existen
            if (!violinIcon.offsetParent) {
                document.querySelector('.fa-violin').classList.remove('fa-violin');
                document.querySelector('.course-icon:nth-child(1)').innerHTML = '游꿭';
            }
            
            if (!celloIcon.offsetParent) {
                document.querySelector('.fa-cello').classList.remove('fa-cello');
                document.querySelector('.fa-cello').parentNode.innerHTML = '游꿭';
            }
            
            if (!pianoIcon.offsetParent) {
                document.querySelector('.fa-piano').classList.remove('fa-piano');
                document.querySelector('.fa-piano').parentNode.innerHTML = '游꿫';
            }
        });

